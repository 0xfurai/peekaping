{
  "name": "server",
  "dependencies": {},
  "scripts": {
    "dev": "pnpm dev:watch",
    "dev:watch": "nodemon --watch './**/*' -e go,html --signal SIGTERM --exec \"../../scripts/go.sh run ./src\"",
    "docs:watch": "nodemon --watch './**/*' --ignore docs -e go --exec \"../../scripts/go.sh swag init -d src\"",
    "build": "../../scripts/go.sh build -o dist/server ./src",
    "build:docker": "docker build -t peekaping/server:latest ."
  }
}