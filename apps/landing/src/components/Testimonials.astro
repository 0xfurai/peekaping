---
import SectionName from "./SectionName.astro";
import SectionTitle from "./SectionTitle.astro";
---

<section class="bg-zinc-100" id="testimonials">
  <div class="max-w-screen-lg mx-auto py-12 flex flex-col items-center">
    <SectionName>Testimonials</SectionName>
    <SectionTitle
      >What <span class="text-gradient">Community Says</span></SectionTitle
